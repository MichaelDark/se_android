<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/list_tile_note_imv_gallery"
            android:layout_width="@dimen/list_tile_note_gallery_image_size"
            android:layout_height="@dimen/list_tile_note_gallery_image_size"
            android:layout_margin="8dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@id/list_tile_note_imv_priority"
            app:layout_constraintEnd_toStartOf="@id/list_tile_note_txv_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_number_1" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/list_tile_note_imv_priority"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="8dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="@id/list_tile_note_imv_gallery"
            app:layout_constraintStart_toStartOf="@id/list_tile_note_imv_gallery"
            app:layout_constraintTop_toBottomOf="@id/list_tile_note_imv_gallery"
            app:layout_constraintVertical_bias="0"
            tools:src="@drawable/ic_number_1" />

        <TextView
            android:id="@+id/list_tile_note_txv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@color/colorGreyDark"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/list_tile_note_imv_gallery"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Title" />

        <TextView
            android:id="@+id/list_tile_note_txv_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@color/colorGrey"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/list_tile_note_txv_title"
            app:layout_constraintStart_toStartOf="@id/list_tile_note_txv_title"
            app:layout_constraintTop_toBottomOf="@id/list_tile_note_txv_title"
            tools:text="YYYY/MM/DD HH:mm" />

        <TextView
            android:id="@+id/list_tile_note_txv_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@color/colorGreyDark"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/list_tile_note_txv_title"
            app:layout_constraintStart_toStartOf="@id/list_tile_note_txv_title"
            app:layout_constraintTop_toBottomOf="@id/list_tile_note_txv_date"
            app:layout_constraintVertical_bias="0"
            tools:text="Large description" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGreyLight" />

</androidx.appcompat.widget.LinearLayoutCompat>
