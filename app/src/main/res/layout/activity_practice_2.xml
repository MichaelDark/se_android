                android:textAlignment="center"
                android:textSize="@dimen/activity_practice_2_txv_text_size"
                android:textStyle="bold" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorGreyDark"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_practice_2_txv_clear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/text_clear"
                android:textAlignment="center"
                android:textSize="@dimen/activity_practice_2_txv_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/activity_practice_2_txv_number_0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/text_number_0"
                android:textAlignment="center"
                android:textSize="@dimen/activity_practice_2_txv_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/activity_practice_2_txv_calculate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
